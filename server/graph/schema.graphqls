# --------------- Inputs ---------------

input NewUser {
  username: String!
  email: String
}

input NewTodo {
  text: String!
  userId: String!
}

# --------- Queries & Mutations ---------

type Query {
  getTodos(userId: String!): [Todo!]!
  getTodo(userId: String!, todoId: String!): Todo
  getUsers: [User!]!
}

type Mutation {
  createUser(input: NewUser!): User!
  createTodo(input: NewTodo!): Todo!
}
