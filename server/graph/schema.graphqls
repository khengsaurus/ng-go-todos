#   todos: [Todo!]!
# }

# --------------- Inputs ---------------

input NewUser {
  email: String!
  username: String
}

input NewTodo {
  text: String!
  userId: String!
  tag: String
  priority: Int
}

input UpdateTodo {
  id: String!
  userId: String! # change to assign to another user
  text: String!
  priority: Int!
  tag: String!
  done: Boolean!
}

# --------- Queries & Mutations ---------

type Query {
  getTodos(userId: String!, fresh: Boolean!): [Todo!]!
  getTodo(todoId: String!): Todo
  getUsers: [User!]!
  getUser(email: String!): User
}

type Mutation {
  createUser(newUser: NewUser!): User!
  createTodo(newTodo: NewTodo!): Todo!
  updateTodo(updateTodo: UpdateTodo!): Todo!
  deleteUser(userId: String!): Boolean
  deleteTodo(userId: String!, todoId: String!): String!
}
